{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "dist",
        "importsNotUsedAsValues": "preserve",
        "composite": true,
        "rootDir": "src",
        "noEmitOnError": true
    },
    "include": ["src/**/*"],
    "references": [
        {
            "path": "../shared"
        }
    ]
}
